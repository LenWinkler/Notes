@model Notes.Models.Note

@{
    bool editing = Model.Id != 0 ? true : false;
}

<br />
<h2 class="text-info">@(editing ? "Edit" : "New") Note</h2>
<br />

<div class="container" style="padding:30px;">
    <form method="post">
        @if (editing)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Title"></label>
        </div>
        <div class="col-4">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Text"></label>
        </div>
        <div class="col-7">
            @if (editing)
            {
                <textarea asp-for="Text" class="form-control"></textarea>
            }
            @if (!editing)
            {
                <input asp-for="Text" class="form-control" placeholder="Write your note here..." />
            }
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-success form-control">@(editing ? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-action="Notes" class="btn btn-primary form-control">Back</a>
            </div>
        </div>
    </form>
</div>